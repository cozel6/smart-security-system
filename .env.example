# ==========================================
# SMART SECURITY SYSTEM - CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ==========================================
# TELEGRAM BOT CONFIGURATION
# ==========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (use @userinfobot to get it)
TELEGRAM_CHAT_ID=your_chat_id_here

# Cooldown between alerts in seconds (prevent spam)
ALERT_COOLDOWN=30

# ==========================================
# CAMERA CONFIGURATION
# ==========================================
# Camera index (0 for default USB camera, 1 for second camera, etc.)
CAMERA_INDEX=0

# Camera resolution
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Camera FPS target
CAMERA_FPS=15

# ==========================================
# FLASK SERVER CONFIGURATION
# ==========================================
# Flask server port (default: 5000)
FLASK_PORT=5000

# Flask host (0.0.0.0 for network access, 127.0.0.1 for localhost only)
FLASK_HOST=0.0.0.0

# Flask debug mode (True for development, False for production)
FLASK_DEBUG=False

# ==========================================
# YOLO DETECTION CONFIGURATION
# ==========================================
# YOLO model name (yolov5n.pt, yolov5s.pt, etc.)
YOLO_MODEL=yolov5n.pt

# Confidence threshold (0.0-1.0, higher = more strict)
YOLO_CONFIDENCE=0.6

# IOU threshold for NMS (0.0-1.0)
YOLO_IOU_THRESHOLD=0.45

# Image size for YOLO inference (416, 640, etc. - smaller = faster)
YOLO_IMG_SIZE=416

# ==========================================
# GPIO PIN CONFIGURATION (Raspberry Pi Only)
# ==========================================
# PIR Motion Sensor (GPIO 24, Physical Pin 18)
PIR_PIN=24

# LED Indicators
LED_RED_PIN=17    # Physical Pin 11 - Alarm indicator (red)
LED_GREEN_PIN=27  # Physical Pin 13 - Armed indicator (green)

# Buzzer (GPIO 23, Physical Pin 16)
BUZZER_PIN=23

# Enable/Disable Hardware (set to False if not on Raspberry Pi)
USE_HARDWARE=True

# PIR Auto-Arm Configuration
# When enabled, PIR sensor will automatically arm/disarm the camera
PIR_AUTO_ARM_ENABLED=True
# Timeout in seconds - system auto-disarms after this many seconds without motion
PIR_NO_MOTION_TIMEOUT=120

# ==========================================
# MOTION DETECTION CONFIGURATION
# ==========================================
# Minimum contour area to consider as motion (pixels)
MOTION_MIN_AREA=500

# Number of frames to wait before considering motion stopped
MOTION_FRAMES_THRESHOLD=10

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/security_system.log

# Maximum log file size in MB
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================
# System name
SYSTEM_NAME=Smart Security System

# Timezone
TIMEZONE=Europe/Bucharest

# Maximum snapshot storage (number of images)
MAX_SNAPSHOTS=100

# Snapshot retention days
SNAPSHOT_RETENTION_DAYS=7
